{
    "name": "KissAnime++",
    "version": "2.3",
    "manifest_version": 2,
    
    "short_name": "KA++",
    "description": "Remembers video settings for KissAnime/KissCartoon/KissAsian websites",
    "author": "GazZy",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    
    "content_scripts": [
        {
            "matches": ["*://kissanime.to/*", "*://kissanime.com/*", "*://kisscartoon.me/*", "*://kissasian.com/*"],
            "js": ["script.js"]
        }
    ],
    
    "permissions": [
        "storage"
    ]
}
